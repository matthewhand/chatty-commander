{
  "name": "chatty-commander-webui",
  "version": "1.0.0",
  "description": "Web-based interface for ChattyCommander voice control system",
  "private": true,
  "dependencies": {
    "@mui/icons-material": "^5.14.19",
    "@mui/x-charts": "^6.18.1",
    "@tanstack/react-query": "^5.8.4",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "axios": "^1.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.18.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.8.0",
    "typescript": "^4.9.5",
    "web-vitals": "^3.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:e2e": "playwright test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test:ci": "react-scripts test --watchAll=false --ci",
    "jest:ci": "jest --ci --runInBand --watch=false",
    "test:ci:coverage": "react-scripts test --watchAll=false --ci --coverage",
    "test:changed": "jest --ci --runInBand --watch=false --onlyChanged",
    "test:watch:ci": "npm run test:ci",
    "lint:ci": "eslint src --ext .ts,.tsx --max-warnings=0",
    "type-check:ci": "tsc --noEmit"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx,js,jsx}",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 55,
        "lines": 60,
        "statements": 60
      }
    }
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.0",
    "@types/jest": "^29.5.12",
    "autoprefixer": "^10.4.16",
    "daisyui": "^5.5.14",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.4.17"
  },
  "proxy": "http://localhost:8100"
}
